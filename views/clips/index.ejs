<%- include('../partials/header') %>

<div class="allClipsContainer">
  <% for(let i = 0; i < clips.length; i++){%>
    <div class="videoContainer">
       <p> Overall Rating:
         <%= (clips[i].reviews.reduce((acc, review) => {
          return acc + review.rating;
         },0) / clips[i].reviews.length).toFixed(1) %>
        / <%= clips[i].reviews.length %> Comments</p>
      <iframe src="<%= clips[i].Url %>&parent=<%= hostname %>" frameborder="0" allowfullscreen="true" scrolling="no" height="278" width="420"></iframe>
      <button class="viewComments" role="button"><a href="/clips/<%= clips[i]._id %>">View Comments</a></button>
    </div>
  <% } %>    
</div>
  
<%- include('../partials/footer') %>

